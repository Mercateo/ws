{
  "rules": {
    "class-name": true,
    "curly": true,
    "indent": [
      true,
      "spaces"
    ],
    "jsdoc-format": true,
    "no-duplicate-key": true,
    "no-duplicate-variable": true,
    "no-unreachable": true,
    "no-unused-variable": true,
    "no-unused-expression": true,
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      "check-else"
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "triple-equals":  [
      true,
      "allow-null-check"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-operator",
      "check-typecast"
    ]
  }
}
